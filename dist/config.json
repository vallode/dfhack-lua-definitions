{
    "$schema": "https://raw.githubusercontent.com/LuaLS/LLS-Addons/main/schemas/addon_config.schema.json",
    "name": "DFHack Lua",
    "words": [
        "mkmodule(.+)",
        "dfhack"
    ],
    "settings": {
        "Lua.runtime.version": "Lua 5.3",
        "Lua.diagnostics.disable": [
            "lowercase-global"
        ],
        "Lua.runtime.special": {
            "arg_error": "error",
            "dfhack.error": "error",
            "qerror": "error",
            "reqscript": "dofile",
            "mkmodule": "require"
        }
    }
}